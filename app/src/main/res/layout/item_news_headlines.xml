<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    app:cardCornerRadius="15dp"
    android:layout_marginEnd="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="200dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv_headline_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tint="#88000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_headline_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="By Alland Rifqy Putra"
            android:textColor="#FCF2F2F2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_headline_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_headline_date"
            app:layout_constraintEnd_toEndOf="@+id/tv_headline_author"
            app:layout_constraintStart_toStartOf="@+id/tv_headline_author"
            app:layout_constraintTop_toBottomOf="@+id/tv_headline_author"
            tools:text="Apa Itu Tapera yang Buat Gaji Dipotong 2,5 Persen Tiap Tanggal 10? - CNN Indonesia" />

        <TextView
            android:id="@+id/tv_headline_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:maxLines="3"
            android:text="12-12-2022"
            android:textColor="#DDF2F2F2"
            app:layout_constraintBottom_toBottomOf="@+id/iv_headline_news"
            app:layout_constraintEnd_toEndOf="@+id/tv_headline_title"
            app:layout_constraintStart_toStartOf="@+id/tv_headline_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>